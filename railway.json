{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "echo 'SUPABASE_URL='$SUPABASE_URL && echo 'SECRET_KEY='$SECRET_KEY && . /opt/venv/bin/activate && uvicorn backend.api.main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
